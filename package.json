{
  "name": "lambdatest-playwright-testing",
  "version": "1.0.0",
  "description": "Comprehensive test framework for LambdaTest Playwright integration",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:system",
    "test:unit": "mocha test_scripts/unit/**/*.test.js",
    "test:integration": "mocha test_scripts/integration/**/*.test.js",
    "test:system": "mocha test_scripts/system/**/*.test.js",
    "test:regression": "mocha test_scripts/regression/**/*.test.js",
    "test:performance": "mocha test_scripts/performance/**/*.test.js",
    "test:security": "mocha test_scripts/security/**/*.test.js",
    "test:accessibility": "mocha test_scripts/accessibility/**/*.test.js",
    "test:visual": "mocha test_scripts/visual/**/*.test.js",
    "test:api": "mocha test_scripts/api/**/*.test.js",
    "report": "node scripts/generate-report.js"
  },
  "keywords": [
    "testing",
    "playwright",
    "lambdatest",
    "automation",
    "e2e"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.35.0",
    "@axe-core/playwright": "^4.8.1",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "expect": "^29.5.0",
    "html-reporter": "^1.4.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "playwright": "^1.35.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}